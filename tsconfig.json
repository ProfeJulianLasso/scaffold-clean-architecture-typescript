{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@common/*": [
        "./src/shared/common/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@domain/security/*": [
        "src/contexts/security/domain/*"
      ],
      "@application/security/*": [
        "src/contexts/security/application/*"
      ],
      "@infrastructure/security/*": [
        "src/contexts/security/infrastructure/*"
      ],
    }
  }
}